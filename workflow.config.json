{
  "workflow_description": {
    "name":"bcl2fastq",
    "version": 1.0,
    "label":"Bcl2fastq, demultiplexing and UMI processing",
    "type":"run_demultiplexing",
    "inputs":"{run_dir}/*",
    "outputs":[
      "raw_fastq/{sample}*fastq.gz"
    ],
    "run_outputs":[
      "{library}/sequencing_run_info/*"
    ]
  },
  "general_params": [
    "sample_name",
    "i7_name",
    "i7_sequence",
    "i5_name",
    "i5_sequence",
    "run_forward_read_length",
    "run_reverse_read_length",
    "lib_forward_read_length",
    "lib_reverse_read_length",
    "run_dir",
    "run_date",
    "run_name"
  ],
  "gui_params" : {
    "primary": {
      "UMI": {
        "label": "UMI",
        "type": "enum",
        "default": "no_umi",
        "list": {
          "no_umi": "No UMI",
          "BRONCO": "BRONCO",
          "Quantseq FWD": "Quantseq FWD",
          "CORALL": "CORALL",
          "custom_umi": "Custom specified UMI",
          "CS_UMI": "CS_UMI",
          "CS_UMI_sep_file": "CS_UMI_sep_file",
          "IDT": "IDT",
          "BRB": "BRB",
          "LYNX": "LYNX",
          "Qiaseq": "Qiaseq"
        }
      }
    },
    "detailed": {
      "barcode_mismatches": {
       "label": "barcode_mismatches",
        "type": "int",
        "default": 0
      },
      "base_mask_field": {
       "label": "Base mask field",
        "type": "string",
        "default": "",
        "conditions": {
          "value": {
            "UMI": {
              "BRONCO": "y*,I*,y*,y*"
            }
          }
        }
      },
      "no_lane_splitting": {
        "label": "No lane splitting",
        "type": "bool",
        "default": true
      },
      "additional_options": {
        "label": "Additional options to bcl2fastq call",
        "type": "string",
        "default": ""
      }
    }
  }
}
